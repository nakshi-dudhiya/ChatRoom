@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<script src="https://cdnjs.cloudflare.com/ajax/libs/aspnet-signalr/1.1.4/signalr.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.min.js"></script>


<div class="text-center">
    <h1 class="display-4">Welcome to the ChatRoom!</h1>

</div>


<div class="col-sm-8 col-sm-offset-4 mt-5">
    <form id="msgForm">
        <div class="form-group">
            <input type="text" class="form-control" id="username" placeholder="Enter UserName" maxlength="10" required autocomplete="off">
            <span id="error"></span>
        </div>
        <div class="input-group mb-3">
            <input type="text" class="form-control" id="usermessage" placeholder="Enter Message" maxlength="140" required autocomplete="off">
            <div class="input-group-append">
                <button id="btnSend" class="btn btn-outline-secondary" type="submit">SEND</button>
            </div>
        </div>
    </form>
    <div class="input-group mb-3">
        <input type="text" class="form-control" id="roomName" placeholder="Enter Room name!" autocomplete="off">
        <div class="input-group-append">
            <button id="btnJoin" class="btn btn-outline-secondary" type="submit">CONNECT</button>
        </div>
        <div class="input-group-append">
            <button id="btnLeave" class="btn btn-outline-secondary" type="submit" disabled>DISCONNECT</button>
        </div>
    </div>
    <div class="border">
        <ul id="chatHistory" class="list-group overflow-auto" style="max-height: 400px; height:400px; "></ul>
    </div>


</div>